<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.androidapp.bahs">

    <uses-sdk tools:overrideLibrary="com.facebook" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".BAHSApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".activity.SplashActivity" />

        <service android:name=".firebase.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".firebase.RegistratinIntentService"
            android:exported="false" />

        <activity
            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.IntroActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.CreateAccountActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity
            android:name=".activity.VideoTutorialActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ListJobActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.OfferPositionActivity"
            android:windowSoftInputMode="stateUnchanged"
            />
        <activity android:name=".activity.AboutMeActivity"></activity>


        <activity android:name=".activity.AfterJobActivity"
                  android:screenOrientation="portrait"
        />
        <activity android:name=".activity.AfterJobFeedbackActivity"
                  android:screenOrientation="portrait"
        />
        <activity android:name=".activity.AfterJobScheduleTrailActivity"
                  android:screenOrientation="portrait"
        />
        <activity android:name=".activity.ScheduleTrailActivity"
                  android:screenOrientation="portrait"
        />
    </application>

</manifest>