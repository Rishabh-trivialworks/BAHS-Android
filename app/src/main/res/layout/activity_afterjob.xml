<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight=".15"
                  android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center"
            android:padding="@dimen/margin_5"
            android:text="@string/how_was_your_interview_for_nany_position"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="@dimen/margin_5"
                  android:gravity="center"
                  android:text="@string/the_feedback_is_only_visible_to_admin"
        />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight=".25"
                  android:orientation="vertical">

        <com.androidapp.bahs.roundimage.CircularImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dpimage"
        />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="@dimen/five_dp"
                  android:text="NickName"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight=".1"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/twenty_dp"
                  android:paddingRight="@dimen/twenty_dp">

        <RatingBar android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center_horizontal"
                   android:numStars="5"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_marginTop="@dimen/margin_5"
                  android:layout_weight=".35"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/twenty_dp"
                  android:paddingRight="@dimen/twenty_dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:padding="@dimen/margin_5"
            android:text="@string/additional_feedback"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:background="@color/white"
                  android:inputType="textMultiLine"
        />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight=".15"
                  android:gravity="center"
                  android:orientation="vertical"
                  android:paddingLeft="@dimen/twenty_dp"
                  android:paddingRight="@dimen/twenty_dp">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/relative_layout_white_border"
                android:gravity="center"
                android:text="Submit"/>
    </LinearLayout>

</LinearLayout>