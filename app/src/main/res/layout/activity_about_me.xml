<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.androidapp.bahs.activity.AboutMeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:scrollbars="none"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/seeking"
                    android:id="@+id/seeking_textView"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/ten_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:id="@+id/seeking_radio_group"
                    >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/seeking_job"
                        android:layout_weight="1"
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/seeking_job_radio_button"
                        />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/seeking_service"
                        android:layout_weight="1"
                        android:theme="@style/MyRadioButton"
                        android:id="@+id/seeking_service_radio_button"
                        />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/first_name"
                    android:id="@+id/textViewfirstname"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    >

                    <ImageView
                        android:id="@+id/img_firstname"
                        style="@style/common_imge_view"
                        android:src="@drawable/name" />

                    <EditText
                        android:id="@+id/edt_firstname"
                        style="@style/edittext"
                        android:hint="@string/firstname"
                        android:inputType="textNoSuggestions|textCapWords" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@id/img_firstname"
                        android:layout_marginTop="5dp"
                        android:background="@color/line" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/what_is_last_name"
                    android:id="@+id/textViewlastname"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    >

                    <ImageView
                        android:id="@+id/img_lastname"
                        style="@style/common_imge_view"
                        android:src="@drawable/name" />

                    <EditText
                        android:id="@+id/edt_lastname"
                        style="@style/edittext"
                        android:hint="@string/lastname"
                        android:inputType="textNoSuggestions|textCapWords" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@id/img_lastname"
                        android:layout_marginTop="5dp"
                        android:background="@color/line" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/nick_name"
                    android:id="@+id/textViewnickname"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    >

                    <ImageView
                        android:id="@+id/img_nickname"
                        style="@style/common_imge_view"
                        android:src="@drawable/name" />

                    <EditText
                        android:id="@+id/edt_nickname"
                        style="@style/edittext"
                        android:hint="@string/nickname"
                        android:inputType="textNoSuggestions|textCapWords" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@id/img_nickname"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/line" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/what_is_billing_address"
                    android:id="@+id/textViewbilling"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    >

                    <ImageView
                        android:id="@+id/img_billing_address"
                        style="@style/common_imge_view"
                        android:src="@drawable/name" />

                    <EditText
                        android:id="@+id/edt_billing_address"
                        style="@style/edittext"
                        android:hint="@string/billing_address"
                        android:inputType="textNoSuggestions|textCapWords" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@id/img_billing_address"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/line" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/twenty_five_dp"
                android:layout_marginRight="@dimen/twenty_five_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/what_is_phone_number"
                    android:id="@+id/textViewphone"
                    android:layout_above="@+id/scrollView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/five_dp"
                    android:textSize="@dimen/textsize_normal"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_48"
                    >

                    <ImageView
                        android:id="@+id/img_phone"
                        style="@style/common_imge_view"
                        android:src="@drawable/name" />

                    <EditText
                        android:id="@+id/edt_phone"
                        style="@style/edittext"
                        android:hint="@string/pnone"
                        android:inputType="textNoSuggestions|textCapWords" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one_dp"
                        android:layout_below="@id/img_phone"
                        android:layout_marginTop="5dp"
                        android:background="@color/line" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_upload_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:orientation="vertical"
                android:visibility="visible">



                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_marginTop="@dimen/margin_20">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imageViewUploadPicture"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/com_facebook_profile_picture_blank_square" />

                    <ProgressBar
                        android:id="@+id/progressImageUplaod"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="5dip"
                        android:indeterminateDrawable="@drawable/progressbar_intermediate"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_upload_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:text="@string/title_upload_picture"
                    android:textColor="@color/hint_color"
                    android:textSize="@dimen/textsize_normal" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</RelativeLayout>
