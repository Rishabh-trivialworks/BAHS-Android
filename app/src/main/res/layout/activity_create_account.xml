<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <include
        android:id="@+id/header"
        layout="@layout/create_account_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:clickable="true"
        android:fillViewport="true"
        android:focusableInTouchMode="true"
        android:scrollbars="none"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/linearlayoutInsideScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></FrameLayout>


            <LinearLayout
                android:id="@+id/linearlayout_login_signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/header"

                android:layout_marginBottom="@dimen/thirty_dp"
                android:layout_marginLeft="@dimen/thirty_dp"
                android:layout_marginRight="@dimen/thirty_dp"
                android:layout_marginTop="@dimen/twenty_dp"
                android:gravity="center"
                android:background="@drawable/login_signup_background"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:id="@+id/continue_social_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="Continue with social"
                    android:textColor="@color/hint_color"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_fb_signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:layout_marginTop="@dimen/fourty_dp"
                    android:background="@drawable/gradient_background"
                    android:drawableLeft="@drawable/facebook_logo"
                    android:text="LOG IN FACEBOOK"
                    android:textColor="@color/white"
                    />


                <TextView
                    android:id="@+id/or_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/thirty_dp"
                    android:layout_marginTop="@dimen/thirty_dp"
                    android:text="or"
                    android:textColor="@color/hint_color" />

                <Button
                    android:id="@+id/login_btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/thirty_dp"
                    android:layout_marginRight="@dimen/thirty_dp"
                    android:background="@drawable/gradient_background"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text16size"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/margin_80"
                    android:layout_marginTop="@dimen/thirty_dp">

                    <TextView
                        android:id="@+id/login_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/new_login_text" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>